* {
    margin: 10px;
    background-color: rgb(18, 28, 177);
}
header {
    font-size: 35px;
    color: fuchsia;
}
h1, h3 {
    text-align: center;
    color: rgb(187, 216, 23);
}
.pr, .work, .story {
    text-justify: auto;
    color: lightblue;

}
.container {
  box-sizing: border-box;
  display: flex;
  flex-wrap: wrap;
  position: relative;
}
.image-container img{
    width: 400px;
    height: 400px;
    box-sizing: border-box;
    
}
.waterfall {
    width: 150%;
    height: 150%;
}
.transition-image {
    position: absolute;
    width: 500px;
    height: 400px;
    top: 20px;
    left: 20px;
    opacity: 0;
    transition: opacity 0.5s ease;
}
.transition-image:hover {
    opacity: 1;
}
.slider-container {
    display: flex;
    position: relative;
    height: 400px;
    width: 500px;
}
.slider {
    display: flex;
    position: static;
    height: 400px;
    width: 500px;
    top: 0px;
    left: 0px;
    background-image: url(c28044dc6ca1dc2637ae1792b22fd6f1);
    animation: slide 20s infinite;
    background-color: black;
}
@keyframes slide {
    25% {
        background-image: url(c28044dc6ca1dc2637ae1792b22fd6f1);
    }
    50% {
        background-image: url(271ff9b6a63fee84e50c1233c058eacd);
    }
    75% {
        background-image: url(e4cf7dbb4919fa8bf9cbd279df4f77c3);
    }
    100% {
        background-image: url(de94a892d7277265fd7624059da36394);
    }
}
.button {
    display: inline;
   
}
button {
    background-color: cornsilk; 
}
